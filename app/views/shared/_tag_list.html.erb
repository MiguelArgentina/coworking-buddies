<% if taggable.tag_list.present? %>
  <div class="flex flex-wrap gap-2 my-2">
    <% taggable.tag_list.each do |tag| %>
      <span class="inline-block bg-indigo-100 text-indigo-800 text-xs font-semibold px-3 py-1 rounded-full">
        <%= tag.strip %>
      </span>
    <% end %>
  </div>
<% end %>
