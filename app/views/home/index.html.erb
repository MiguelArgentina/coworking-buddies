<!-- Greeting Hero Section -->
<div class="bg-gradient-to-br from-indigo-100 via-white to-cyan-100 px-6 pt-8 pb-4 flex justify-center">
  <div class="text-center bg-white/70 backdrop-blur-xl border border-indigo-200 shadow-2xl p-6 rounded-[2rem] max-w-3xl w-full transform transition duration-300 hover:scale-[1.01]">
    <h2 class="text-5xl font-extrabold text-slate-800 mb-6 leading-tight tracking-tight">
      🌐 Explore coworking freedom
    </h2>

    <% if user_signed_in? %>
      <p class="text-lg text-slate-600">
        Welcome back, <strong><%= current_user.name.presence || current_user.email %></strong> 👋
      </p>
    <% else %>
      <p class="text-lg text-gray-700 mb-2">
        Join a growing community of remote workers near you — attend events, share your favorite places, and create your own meetups.Join a growing community of remote workers near you.
      </p>
    <% end %>
  </div>
</div>

<!-- Places Section -->
<div class="px-2">
  <%= link_to places_path do %>
    <h3 class="text-2xl font-semibold text-slate-700 mt-10 mb-3 text-left">Recommended Places</h3>
  <% end %>
</div>
<div class="mt-6 text-center">
</div>
<div class="flex space-x-4 overflow-x-auto pb-4 px-2">
  <% @places.each do |place| %>
    <div class="min-w-[200px] bg-white rounded-xl shadow p-4 flex-shrink-0 border border-indigo-100">
      <h4 class="text-lg font-bold text-indigo-800"><%= place.name %></h4>
      <p class="text-sm text-gray-500"><%= place.city %>, <%= place.state&.name %></p>
      <%= link_to "View", place_path(place), class: "text-sm text-indigo-600 hover:underline" %>
    </div>
  <% end %>
</div>

<!-- Events Section -->
<div class="px-2">
  <%= link_to events_path do %>
    <h3 class="text-2xl font-semibold text-slate-700 mt-10 mb-3 text-left">Events</h3>
  <% end %>
</div>
<div class="flex space-x-4 overflow-x-auto pb-4 px-2">
  <% @events.each do |event| %>
    <div class="min-w-[250px] rounded-xl p-4 flex-shrink-0 border shadow
                <%= event.end_time.past? ? 'bg-gray-100 opacity-60 border-gray-300' : 'bg-white border-indigo-100' %>">
      <h4 class="text-lg font-bold text-slate-800"><%= event.title %></h4>
      <p class="text-sm text-gray-500"><%= event.place.name %></p>
      <p class="text-sm text-gray-600"><%= l(event.start_time, format: :short) %></p>
      <%= link_to "View", event_path(event), class: "text-sm text-indigo-600 hover:underline" %>
    </div>
  <% end %>
</div>
