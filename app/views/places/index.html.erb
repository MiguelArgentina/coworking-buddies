<h1 class="text-2xl font-bold mb-6 text-center">Recommended Places</h1>

<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 px-4 max-w-7xl mx-auto">
  <% @places.each do |place| %>
    <%= link_to place_path(place), class: "block bg-white/80 rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition duration-300 backdrop-blur-md" do %>
      <div class="h-48 bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1519389950473-47ba0277781c');"></div>

      <div class="p-4">
        <h3 class="text-lg font-bold text-slate-800 mb-1"><%= place.name %></h3>
        <p class="text-sm text-gray-600 mb-2"><%= truncate(place.description, length: 100) %></p>
        <p class="text-xs text-gray-500"><%= place.address %></p>
      </div>
    <% end %>
  <% end %>
</div>
