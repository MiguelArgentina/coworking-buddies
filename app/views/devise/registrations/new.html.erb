<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
  <div class="w-full max-w-md bg-white shadow-md rounded-2xl p-8">
    <h2 class="text-2xl font-bold text-center mb-6">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :bio, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :bio, class: "mt-1 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :location, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :location, class: "mt-1 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :address, class: "mt-1 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Password Field -->
      <!-- Password Field -->
      <div class="mb-4" data-controller="password-visibility">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>

        <div class="relative">
          <%= f.password_field :password,
                               autocomplete: "new-password",
                               class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 pr-16",
                               data: { password_visibility_target: "input" } %>

          <button
            type="button"
            data-password-visibility-target="toggle"
            data-action="click->password-visibility#toggle"
            class="absolute right-3 top-1/2 transform -translate-y-1/2 text-xl"
          >ðŸ™ˆ</button>
        </div>
      </div>

      <!-- Password Confirmation Field -->
      <div class="mb-6" data-controller="password-visibility">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>

        <div class="relative">
          <%= f.password_field :password_confirmation,
                               autocomplete: "new-password",
                               class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 pr-16",
                               data: { password_visibility_target: "input" } %>

          <button
            type="button"
            data-password-visibility-target="toggle"
            data-action="click->password-visibility#toggle"
            class="absolute right-3 top-1/2 transform -translate-y-1/2 text-xl"
          >ðŸ™ˆ</button>
        </div>
      </div>



      <div>
        <%= f.submit "Sign up", class: "w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-600 mt-4">
      <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
