<% if resource.errors.any? %>
  <div class="bg-red-100 border border-red-300 text-red-800 px-4 py-3 rounded-md shadow-sm mb-6">
    <p class="font-bold mb-2">
      <%= pluralize(resource.errors.count, "error") %> prohibited this <%= resource_name.to_s.humanize.downcase %> from being saved:
    </p>
    <ul class="list-disc list-inside text-sm space-y-1">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
